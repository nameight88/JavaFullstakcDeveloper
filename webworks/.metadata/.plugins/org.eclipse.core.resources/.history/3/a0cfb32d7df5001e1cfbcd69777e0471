<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title> String 객체 </title>
<script type="text/javascript">		
	var str = '너의 삶 속에 나의 삶을 넣어 삶을 영위하자';
	document.writeln( str.indexOf('삶') + '<br/>'); 
	//처음으로 나오는 문자를 찾는다 3
	document.writeln( str.lastIndexOf('삶')+ '<br/>');
	// 뒤에서 첫번째 값이 나온다 17
	document.writeln( str.indexOf('삶을') + '<br/>');
	//나의 삶을에서의 삶을이 나온다 11
	document.writeln( str.length + '<br/>');
	// 24
	
	document.writeln( str.startsWith('삶') + '<br/>');
	//false
	document.writeln( str.endsWith('삶') + '<br/>');
	//false
	document.writeln( str.includes('삶') + '<hr/>');
	//true

	
	var msg = '자바에서 웹프로젝트까지 열심히 하자!';
	document.writeln( msg.charAt(3)+ '<br/>'); // 서
	document.writeln( msg.slice( 5, 12 )+ '<br/>'); // 웹프로젝트까지
	document.writeln( msg.substring( 5, 12 )+ '<br/>'); //5번째부터 12까지
	document.writeln( msg.substr(5, 7 ) + '<br/>'); // 5번째부터해서 7개까지
	document.writeln( msg.split(' ')+ '<br/>'); //StringTokenzier 랑 비슷하다
	document.writeln( msg.concat('화이팅')+ '<br/>'); //데이터베이스에서의 함수와 비슷하다
	document.writeln( msg +  '<hr/>');
	
	
	
	var  text = '♡해yo';
	document.writeln( text.length +  '<br/>'); //문자열의 길이를 구해준다
	document.writeln( text.repeat(2) +  '<br/>'); //2번 반복
	document.writeln( text.codePointAt(0) +  '<br/>');	// 9825
	document.writeln( String.fromCodePoint(9825) +  '<br/>'); // 하트의 코드값을 출력
	document.writeln( String.fromCodePoint(128169) +  '<br/>');
	
	
   </script>


</head>
<body>

</body>
</html>