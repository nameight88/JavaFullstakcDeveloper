<meta charset="UTF-8">
<title> 새로운 for 문장 </title>
<script type="text/javascript">

var  arr = ['송혜교', '김태희', '전지현' ];

//0. 원래 for 문
for(var i = 0 ;i<arr.length; i+=1 ){
	document.write(arr[i]+ '<br/>');
}
document.write('<table border="2">');

for(var i =0 ; i<3 ; i+=1){
	document.write('<tr>');
	for(var j = 0; j<5 ; j+=1){
		document.write("<td>z</td>")
	}
	document.write('</tr>');
}
document.write('</table>');
//자바스크립트에서 차이는 int i로 변수 선언이 아니라 var i로 설정

// 1. for...in :  요소를 순서대로 처리하기

var  arr = ['송혜교', '김태희', '전지현' ];


//----------------------------------------------------
// 2. for...of  (es6) : 열거형의 요소를 순서대로 처리하기

var  arr = ['송혜교', '김태희', '전지현' ];


</script>
